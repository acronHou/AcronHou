/**用户信息**/
@import "../../utils/toast/toast.wxss";
.container{
	margin:0;
	padding: 0;
}
.userinfo {
  width: 100%;
  height: 80rpx;
  position:relative;
}

.icon{
	display: inline-block;
  width: 60rpx;
  height: 60rpx;
  margin: 10rpx 40rpx;
  border-radius: 50%;
}

.nickname {
	display: inline-block;
	height: 80rpx;
	line-height: 80rpx;
  color: #000;
  font-size:20rpx;
  position: absolute;
  left:120rpx;
  top:0;
}
/**轮播**/
